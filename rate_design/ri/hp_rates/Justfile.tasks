# Uses project_root and tariffs_gas_dir_ri from the including Justfile.
rateacuity_yaml_ri := project_root + "/rate_design/ri/hp_rates/config/tariffs/gas/rateacuity_tariffs.yaml"

# Fetch all RI gas tariffs from Rate Acuity; writes <tariff_key>.json into config/tariffs/gas.
fetch-gas-ri:
	uv run --directory "{{project_root}}" python {{project_root}}/utils/pre/fetch_gas_tariffs_rateacuity.py "{{rateacuity_yaml_ri}}" "{{tariffs_gas_dir_ri}}"
